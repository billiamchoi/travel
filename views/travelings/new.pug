extends ../layout

block content
  .container
    h1.main-title Register
    form(action='/travelings', method='POST')
      .form-group
        label(for='name') Name
        input.form-control(type='text', id='name', name='name', placeholder='Name of Traveling Site')
      .form-group
        label(for='location') Location
        input.form-control(type='text', id='location', name='location', placeholder='Location of Traveling Site')
      .form-group
        label(for='price') Price
        input.form-control(type='text', id='price', name='price', placeholder='Price')
      .form-group
        label(for='description') Description
        input.form-control(type='text', id='description', name='description', placeholder='Description')
      .form-group
        label(for='course') Course
        input.form-control(type='text', id='course', name='course', placeholder='Course')  
      a.btn.btn-outline-secondary(href='/travelings') List
      | 
      button.btn.btn-primary(type='submit') Register 